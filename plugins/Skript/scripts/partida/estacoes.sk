
command /loopblocksset <integer> <integer>:
    trigger:
        set {partidaplaca::%arg-1%::%arg-2%} to location(player's x-coordinate, player's y-coordinate, player's z-coordinate, player's world) 
        message "CF%arg-1%: setado %arg-2% para %{partidaplaca::%arg-1%::%arg-2%}%"

command /loopblocksrei <integer> <integer> <integer>:
    trigger:
        if arg-2 is 1:
            set {_arg2} to 5
        if arg-2 is 2:
            set {_arg2} to 6
        set {partidaplaca::%arg-1%::%{_arg2}%} to arg-3
        message "CF%arg-1%: setado %{_arg2}% para %arg-3%"

command /loopblocksview <integer>:
    trigger:
        loop blocks between the block at {partidaplaca::%arg-1%::1} and the block at {partidaplaca::%arg-1%::2}:
            loop-block is sign:
                wait 5 tick
                message loop-block
                message line 1 of loop-block
                message line 4 of loop-block
                set {_yaw} to {partidaplaca::%arg-1%::5}
                teleport player to location(loop-block's x-coordinate, loop-block's y-coordinate, loop-block's z-coordinate, loop-block's world, {_yaw}, 70) 

        loop blocks between the block at {partidaplaca::%arg-1%::3} and the block at {partidaplaca::%arg-1%::4}:
            loop-block is sign:
                wait 5 tick
                message loop-block
                message line 1 of loop-block
                message line 4 of loop-block
                set {_yaw} to {partidaplaca::%arg-1%::6}
                teleport player to location(loop-block's x-coordinate, loop-block's y-coordinate, loop-block's z-coordinate, loop-block's world, {_yaw}, 70) 

